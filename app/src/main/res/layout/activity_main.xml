<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="userBean"
            type="com.m.livedate.ui.bean.UserBean" />

        <variable
            name="methord"
            type="com.m.livedate.ui.MainActivity" />

        <variable
            name="viewModel"
            type="com.m.livedate.ui.model.MViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.MainActivity"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@={userBean.name}" />

        <EditText
            android:id="@+id/pass_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:text="@={userBean.passWord}" />

        <Button
            android:id="@+id/try_binding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{()->methord.onClick()}"
            android:text="@{@string/Welcome+userBean.name}" />

    </LinearLayout>
</layout>