<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".custom.TouchPullActivity">

    <com.m.livedate.custom.view.TouchPullView
        android:id="@+id/touch_pull"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <com.m.livedate.custom.view.CircleProgress
        android:id="@+id/circle_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:base_progress_paint_color="@color/bbl_999999"
        app:circle_radius="@dimen/dp_120"
        app:location="top"
        app:progress_paint_color="@color/blue"
        app:progress_stroke_width="@dimen/dp_20" />

    <com.m.livedate.custom.view.LineProgress
        android:layout_width="400dp"
        android:layout_height="@dimen/dp_100" />

    <com.m.livedate.custom.view.WaveView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100" />

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:text="add" />

    <Button
        android:id="@+id/clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="clear" />
</LinearLayout>